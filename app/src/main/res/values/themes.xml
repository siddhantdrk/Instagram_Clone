<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.InstagramClone" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primaryColor</item>
        <!-- Customize your theme here. -->
        <item name="android:colorAccent">@color/accentColor</item>
        <item name="android:spinnerItemStyle">@style/StyleForSpinnerItem</item>
    </style>

    <style name="colorAccentBtnStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/accentColor</item>
    </style>

    <style name="splashTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="inputFieldTextColorTieTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorControlActivated">@color/inputFieldTextColor</item>
        <item name="colorControlHighlight">@color/inputFieldTextColor</item>
        <item name="colorControlNormal">@color/inputFieldTextColor</item>
    </style>

    <style name="whiteTieTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="colorControlNormal">@color/inputFieldBorderColor</item>
    </style>

    <style name="myTabTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/lexendregular</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="commentTieTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorControlActivated">#999999</item>
        <item name="colorControlHighlight">#999999</item>
        <item name="colorControlNormal">#999999</item>
    </style>

    <style name="StyleForSpinnerItem">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/ibm_plex_mono_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/_12sdp</item>
    </style>

</resources>